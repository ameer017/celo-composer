{
  "name": "@celo/celo-composer",
  "version": "2.4.12",
  "description": "CLI tool for generating customizable Celo blockchain starter kits",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "celo-composer": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "tsc && node dist/index.js",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm clean && pnpm build && pnpm test",
    "prepack": "pnpm build && node scripts/prepack-prune.cjs",
    "postpack": "node scripts/postpack-restore.cjs"
  },
  "keywords": [
    "celo",
    "blockchain",
    "cli",
    "starter-kit",
    "monorepo"
  ],
  "author": "Celo Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/celo-org/celo-composer.git"
  },
  "homepage": "https://github.com/celo-org/celo-composer",
  "bugs": {
    "url": "https://github.com/celo-org/celo-composer/issues"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12",
    "node-plop": "^0.32.0",
    "ora": "^7.0.1",
    "path": "^0.12.7",
    "plop": "^4.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.1",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
